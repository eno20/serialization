<?xml version="1.0" encoding="UTF-8" ?>
<project name="maven-antrun-" default="main"  >
<target name="main">
  <mkdir dir="src/main/java"/>
  <echo message="Generate code from *.thrift files:  src/main/resources"/>
  <apply executable="thrift">
    <arg value="-r --gen"/>
    <arg value="java"/>
    <arg value="-out"/>
    <arg value="src/main/java"/>
    <arg value="-I"/>
    <arg value="src/main/resources"/>
    <fileset includes="*.thrift" dir="src/main/resources"/>
  </apply>
</target>
</project>